<%- model_class = Painting -%>

<div class="row">
<div class="container">
<div class="jumbotron">
  <%= image_tag @painting.photo.url, :class => 'img-responsive' %>

</div>
</div>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @painting.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @painting.description %></dd>

  
</dl>

<% if session[:admin] %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              paintings_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_painting_path(@painting), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              painting_path(@painting),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<% end %>